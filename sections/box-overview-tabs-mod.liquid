<script>
  $(document).ready(function () { 
    function changeSlider() {
      $('.tab-slider').slick({
        lazyLoad: 'ondemand',
        slidesToShow: 1,
        slidesToScroll: 1,
        speed: 150,
        swipe: true,
        draggable: true,
        swipeToSlide: true,
        infinite: true,
        arrows: true,
        dots: true,
      });     
      $("a.tab-slide-link").click(function(e) {
        e.preventDefault();
        e.stopPropagation();
        $("#tab2").click();
        $('.tab-slider').slick('slickGoTo', $(this).index());
      });
      $('li.tab2').click(function(e) {
        $('.tab-slider').slick('slickGoTo', 0);
      });
    };
    
    let waitForJQuery = setInterval(function () {
      if (typeof $ != 'undefined') {
          changeSlider();
          clearInterval(waitForJQuery);
      }
    }, 50);
  });
</script>

