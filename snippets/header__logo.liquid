{%- assign logo_size = settings.header_mobile_logo_size | default: 'medium' -%}
<div class="header__logo">
	{%- if settings.show_logo -%}
	<a href="{{ routes.root_url }}" class="header__logo__image dib" title="{{ shop.name | escape }}">  
		{%- comment -%}
      	<img data-src="{{ settings.logo | img_url: '200x74' }}" sizes="(max-width: 991px) 0,{{ settings.logo.width }}px" alt="{{ settings.logo.alt | default: shop.name | escape }}" class="img-responsive lazyload" {% render 'img-one-pixel' %}>
        <img data-src="{{ 'MOD_logo_svg.svg' | asset_url }}" sizes="(max-width: 991px) 0,{{ settings.logo.width }}px" alt="{{ settings.logo.alt | default: shop.name | escape }}" class="img-responsive lazyload" {% render 'img-one-pixel' %}>
		{%- endcomment -%}
        <img src="https://cdn.shopify.com/s/files/1/0536/0513/8593/files/mod-new-logo-01.svg?v=1638284729"
             sizes="(max-width: 991px) 0,{{ settings.logo.width }}px" 
             alt="{{ settings.logo.alt | default: shop.name | escape }}" 
             class="img-responsive lazyload" {% render 'img-one-pixel' %}>

  </a>
	{%- else -%}
	<a class="header__logo__link" href="{{ routes.root_url }}" title="{{ shop.name | escape }}">{{ shop.name }}</a>
	{%- endif -%}
</div>